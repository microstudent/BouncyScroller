<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microstudent.app.surfaceviewapplication.MainActivity">

    <com.microstudent.app.bouncyfastscroller.indexbar.VerticalIndexBar
        android:id="@+id/indexBar"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="match_parent" />

    <Button
        android:text=" startAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startAnim"
        android:visibility="gone"
        />
    <Button
        android:onClick="changeWord"
        android:layout_centerVertical="true"
        android:text="bian"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="reverse"
        android:text="reverse"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <com.microstudent.app.bouncyfastscroller.bouncyhandle.BouncyHandleImpl
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/bh"
        android:layout_width="140dp"
        android:layout_height="200dp"
        />
</RelativeLayout>
