<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <com.microstudent.app.bouncyfastscroller.indexbar.VerticalIndexBar
        android:id="@+id/index_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/space_normal"
        />

    <com.microstudent.app.bouncyfastscroller.thumb.RoundThumb
        android:id="@+id/thumb"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="10dp"
        android:background="@drawable/bg_thumb"
        android:layout_width="10dp"
        android:layout_height="50dp"
        />



    <com.microstudent.app.bouncyfastscroller.bouncyhandle.BouncyHandleImpl
        android:id="@+id/scroll_handle"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|end"
        />
</FrameLayout>